<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notiDpId"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@color/black" />

    <TextView
        android:id="@+id/notificationId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/notiDpId"
        android:text="Siam started following you"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notiTimeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notificationId"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@+id/notiDpId"
        android:text="10 munites ago" />


</RelativeLayout>